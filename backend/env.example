# 後端環境變數配置範例
# 複製此文件為 .env 並填入實際值

# 資料庫配置
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
USE_SSL=false

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# 管理員帳號配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# 前端 URL 配置（用於 CORS）
FRONTEND_URL=https://wuridao-project.onrender.com

# Cookie Domain 配置（用於跨域登入）
# 在生產環境中，設置為 .onrender.com 以支援所有 onrender 子域名
# 在開發環境中，留空使用預設的 host-only cookie
AUTH_COOKIE_DOMAIN=.onrender.com

# 環境配置
NODE_ENV=production
PORT=3000

# 日誌配置
LOG_LEVEL=info

# 資料庫連接池配置
DB_POOL_SIZE_PROD=10
DB_POOL_SIZE_DEV=5
DB_MAX_QUERY_TIME=1000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=30000

# 免費服務環境優化
FREE_TIER=true
DB_POOL_SIZE_FREE=5
DB_ACQUIRE_TIMEOUT_FREE=30000
DB_IDLE_TIMEOUT_FREE=15000

# Cloudinary 配置
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Unsplash 配置
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
